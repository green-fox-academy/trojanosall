@model List<ListingTodosApp.Models.Todo>

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
</head>
<body>
    <h1>Todos for today</h1>
    <table>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Is urgent?</th>
            <th>Is done?</th>
        </tr>
        @foreach (var todo in Model)
            {
            <tr>
                <td>@todo.Id </td>
                <td>@todo.Title </td>
                <td>@todo.IsUrgent </td>
                <td>@todo.IsDone</td>
            </tr>
        }
    </table>
</body>
</html>
