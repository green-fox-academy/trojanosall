@model ICollection<ListingTodosApp.Models.Todo>

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
</head>
<body>
    <h1>TODOS FOR TODAY</h1>
    <h2><a href="/add">Add new Todo</a></h2>
    <table>
        <tr>
            <th>ID</th>
            <th>TITLE</th>
            <th>IS URGENT?</th>
            <th>IS DONE?</th>
        </tr>
        @foreach (var todo in Model)
            {
            <tr>
                <td>@todo.Id </td>
                <td>@todo.Title </td>
                <td>@todo.IsUrgent </td>
                <td>@todo.IsDone</td>
                <td>delete</td>
            </tr>
        }
    </table>
</body>
</html>
